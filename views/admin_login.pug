extends layout
block append_css
  link(href='/public_css/admin.css', rel='stylesheet')
block content
  .admin-wrap.bg-white
    .container-fluid
      .login-wrap
        .form-group
          label 관리자 아이디
          input.form-control(type='text', name='user_id')
        .form-group
          label 관리자 비밀번호
          input.form-control(type='password', name='user_pw')
        button.btn.btn-primary.w-100(type='button', onclick='fnLogin()') 로그인
block append_js
  script(src='/public_js/admin.js', type='text/javascript')