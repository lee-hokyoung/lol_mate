extends layout
block append_css
  link(href='/public_css/review.css', rel='stylesheet')
block content
  #review_back.page-header.page-back(data-parallax="true")
    .container
      .row
        .col-md-12.text-center
          h1.title 후기 게시판
  .main.main-raised
    .container
      .row.section
        .col-md-8.mx-auto
          .row
            .col-12
              .form-group
                label 제목
                input.form-control(type='text', name='title')
            .col-md-6
              .form-group
                label 글쓴이
                input.form-control(type='text', name='writer')
            .col-md-6
              .form-group
                label 이메일
                input.form-control(type='text', name='email')
            .col-md-6
              .form-group
                label 비밀번호
                input.form-control(type='text', name='password')
            .col-md-6
              .form-group
                label 비밀번호 확인
                input.form-control(type='text', name='password_chk')
          textarea#editor(name='content', placeholder='오해영')
